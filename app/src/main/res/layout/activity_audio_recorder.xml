<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aabbaa"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".AudioRecorder">

    <TextView
        android:id="@+id/tvRecordAudio"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Record Audio"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:layout_margin="10dp"
        android:background="#aa11"
        />

    <Button
        android:id="@+id/btnStartRecording"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Start Recording"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:layout_margin="10dp"
        android:background="#11ccaa"/>


    <Button
        android:id="@+id/btnStopRecording"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Stop Recording "
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:layout_margin="10dp"
        android:background="#aaccff"/>

    <TextView
        android:id="@+id/tvPlayArea"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Play Area"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:layout_margin="10dp"
        android:background="#aa3377"
        />

    <Button
        android:id="@+id/btnPlayRecording"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Play Recording"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:layout_margin="10dp"
        android:background="#9977aa"/>

    <Button
        android:id="@+id/btnPauseRecording"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Pause Recording "
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:layout_margin="10dp"
        android:background="#1111ff"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        />

</LinearLayout>